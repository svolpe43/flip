{
  "manifest_version": 2,

  "name": "Flipper",
  "description": "Super cool awesome workspace manager for Chrome.",
  "version": "1.0",

  "browser_action": {
    "default_icon": "res/icon.png",
    "default_popup": "index.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["css/notification.css"],
      "js": ["js/notification.js"]
    },
    {
      "matches": ["https://backlog.acquia.com/*"],
      "css": ["css/notification.css"],
      "js": ["js/jira.js"]
    }
  ],
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "notifications"
  ],
  "commands": {
    "cycle-groups-up": {
      "suggested_key": {
        "default": "Ctrl+1",
        "mac": "MacCtrl+1"
      },
      "description": "Cycle the active group up one."
    },
    "cycle-groups-down": {
      "suggested_key": {
        "default": "Ctrl+2",
        "mac": "MacCtrl+2"
      },
      "description": "Cycle the active group down one."
    },
    "cycle-links-up": {
      "suggested_key": {
        "default": "Ctrl+Q",
        "mac": "MacCtrl+Q"
      },
      "description": "Cycle the active link up one."
    },
    "cycle-links-down": {
      "suggested_key": {
        "default": "Ctrl+W",
        "mac": "MacCtrl+W"
      },
      "description": "Cycle the active link down one."
    }
  },
  "background": {
    "scripts": ["js/back.js"]
  }
}
